<div class="post-card">
  <div class="post-header">
    <img src="profile-pic.jpg" alt="Profile Picture" class="profile-pic">
    <div class="user-info">
      <p class="username">Username</p>
      <p class="location">Location</p>
    </div>
  </div>

  <div class="post-image">
    <img src="user-photo.jpg" alt="User's Post Image">
  </div>

  <div class="post-actions">
    <div class="stars">
      <span class="star" data-rating="1">★</span>
      <span class="star" data-rating="2">★</span>
      <span class="star" data-rating="3">★</span>
      <span class="star" data-rating="4">★</span>
      <span class="star" data-rating="5">★</span>
    </div>
    <button class="comment-button">Comment</button>
    <button class="save-button">Save</button>
  </div>

  <p class="caption">This is a sample caption for the post.</p>

  <!-- Hidden comment box -->
  <div class="comment-box" style="display: none;">
    <textarea placeholder="Write a comment..."></textarea>
    <div class="comment-buttons">
      <button class="post-comment">Post</button>
      <button class="cancel-comment">Cancel</button>
    </div>
    <p class="comment-error" style="display: none; color: red;">Please enter a comment.</p>
  </div>
</div>